%%% -*- mode: erlang -*-

%% Require OTP version R13B04 or R14
{require_otp_vsn, "R13B04|R14"}.

%% Depends
{deps_dir, "../"}.
{deps, [{asciiedoc, "", {git, "git://github.com/norton/asciiedoc.git"}}
        , {meck, "", {git, "git://github.com/norton/meck.git"}}
        , {edown, "", {git, "git://github.com/norton/edown.git"}}
        , {abnfc, "", {git, "git://github.com/norton/abnfc.git"}}
        , {ubf, "", {git, "git://github.com/norton/ubf.git"}}
       ]}.

%% Erlang compiler options
{erl_opts, [debug_info, warnings_as_errors
            , {i, "../ubf/include/"}
            , {i, "../abnfc/include/"}
           ]}.

%% Erlang edoc options
{edoc_opts, [{doclet, asciiedown_doclet}
             , {src_path, ["src", "test"]}
             , {top_level_readme, {"./README.md", "https://github.com/norton/ubf-abnf"}}
            ]}.

%% Test Erlang files to compile before the rest.
{eunit_first_files, ["test/eunit/abnf_rfc5234_core.erl"
                     , "test/eunit/abnf_rfc3986.erl"
                    ]}.

%% EUnit options
{eunit_opts, [verbose]}.
